@using TripLog
@using TripLog.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TripLog.Models.Trip

@{
    var des = ((String[])TempData.Peek("Destination"))[0];
    ViewData["Title"] = "Add Things To Do In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"] @des</h1>
<div class="row">
    <div class="col-md-12">
    </div>
</div>
<form asp-controller="Trip" asp-action="AddPage3" method="post">
    <div class="form-group">
        <br>
        <input asp-for="ThingToDo1" class="form-control" />
        <span asp-validation-for="ThingToDo1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <br>
        <input asp-for="ThingToDo2" class="form-control" />
        <span asp-validation-for="ThingToDo2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <br>
        <input asp-for="ThingToDo3" class="form-control" />
        <span asp-validation-for="ThingToDo3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Trip" asp-action="Cancel" class="btn btn-secondary">Cancel</a>

    </div>
</form>