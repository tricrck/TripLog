@using TripLog
@using TripLog.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TripLog.Models.Trip

@{
    var acc = ((String[])TempData.Peek("Accommodation"))[0];
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Info For";
}

<h1>@ViewData["Title"] @acc</h1>

<form asp-controller="Trip" asp-action="AddPage2" method="post">
    <div class="form-group">
        <label asp-for="AccommodationPhone"></label>
        <input asp-for="AccommodationPhone" class="form-control" />
        <span asp-validation-for="AccommodationPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccommodationEmail"></label>
        <input asp-for="AccommodationEmail" class="form-control" />
        <span asp-validation-for="AccommodationEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a asp-controller="Trip" asp-action="Add" class="btn btn-secondary">Previous</a>
        <button type="submit" class="btn btn-primary">Next</button>
    </div>
</form>
